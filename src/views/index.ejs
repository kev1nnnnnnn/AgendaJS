        <div class="col my-3">
          <div class="alert alert-danger">Houve um erro</div>
        </div>
      </div>

      <div class="responsive-table">
        <table class="table my-3">
          <% contatos.forEach(contatos => { %>
            <tr>
              <td><%=contato.nome%></td>
              <td><%=contato.sobrenome%></td>
              <td><%=contato.email%></td>
              <td><%=contato.telefone%></td>
              <td><a class="btn btn-alert" href="/contato/index/<%=contato._id%>">Editar</a></td>
              <td><a class="btn btn-danger" href="/contato/index/<%=contato._id%>">Excluir</a></td>
            
    
            </tr>
          <% }); %>
         
        </table>
      </div>

    </div>


    <div class="col-lg-2">

    </div>
  </div>
</div>
   

<%- include('includes/footer') %>