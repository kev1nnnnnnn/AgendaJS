<%- include('includes/header'); %>
<%- include('includes/nav'); %> 


<div class="container mt-5">
  <div class="row">
    <div class="col-lg-2">

    </div>
    <div class="col-lg-8">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos est√£o abaixo!</p>
      <%- include('includes/messages.ejs') %>
